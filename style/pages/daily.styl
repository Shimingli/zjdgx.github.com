@import '../common/header.styl'
html, body
  width 100%
  height 100%
  overflow hidden
  font 12px/1.5em 'Courier New', 'Microsoft Yahei'
ul, ol, li, p
  margin 0
  padding 0
li
  list-style none
h5
  margin 0

.daily
  margin 0 6%
  border 1px solid #23c778
  border-top none
  > li
    padding 10px 20px
    border-bottom 1px solid #23c778
    &:last-of-type
      border none
    label
      text-indent 1em
      display inline-block
    ol
      text-indent 2em
