@import '../common/header.styl'
html, body
  width 100%
  height 100%
  overflow hidden
  font 12px/1.5em 'Courier New', 'Microsoft Yahei'
ul, ol, li, p
  margin 0
  padding 0
li
  list-style none
h5
  margin 0

.daily
  display flex
  flex-wrap wrap
  overflow hidden
  margin 10px 10% 0
  padding 10px 0 0 10px
  border 1px solid green-color
  > li
    flex-grow 1
    max-width 18%
    padding 10px 20px
    border-radius 4px
    margin 0 10px 10px 0
    box-shadow 0 0 2px green-color
    label
      text-indent 1em
      display inline-block
    ol
      text-indent 2em
	  li
        word-wrap break-word
        word-break break-all
	.unfinished
      color #dd4b39
      text-decoration underline