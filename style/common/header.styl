@import './normalize.css'
header-height = 60px
header-link-color = #808080

textOverflow()
   overflow hidden
   white-space nowrap
   text-overflow ellipsis
   -o-text-overflow ellipsis
   -moz-binding url('./ellipsis.xml#ellipsis')

.header
   height header-height
   font-family 'Courier New'
   border-bottom 2px solid #23c778
   .logo
      width 10%
      height 100%
      font-size 36px
      line-height 60px
      margin-left 20px
      display inline-block
      text-decoration none
      vertical-align middle
      color header-link-color
   .category
      height header-height
      display inline-block
      vertical-align middle
      line-height header-height
   .item
      padding 0 2em
      position relative
      display inline-block
      &.cur label, &.cur a
         color #23C778
      &:hover label
         color #23C778
         transition color .3s
         background-color transparent
      label
         font-size 20px
         color header-link-color
         a
            color #808080
            text-decoration none
      ul
         display none
      &:hover ul
         left 0
         margin 0
         top 65px
         padding 0
         z-index 4
         display block
         position absolute
         border-radius 2px
         background-color #fff
         border 1px solid header-link-color
         &:before
            width 6px
            z-index 2
            height 6px
            content ''
            display block
            margin 0 auto
            margin-top -4px
            background #fff
            transform rotate(-45deg)
            border 1px solid #808080
            border-width 1px 1px 0 0
         &:after
            left 0
            top -5px
            content ''
            width 100%
            height 5px
            display block
            position absolute
            background transparent
.header .item li
   height 24px
   list-style none
   line-height 24px
   &.cur a
      color #fff
      background-color #23c778
   a
    color #000
    display block
    padding 0 2em
    font-size 14px
    text-decoration none
    &:hover
         color #fff
         transition color .3s
         background-color #23c778
   &:first-child
      z-index 9
      margin-top -3px
      position relative
