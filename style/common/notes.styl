@import './normalize.css'
body
  padding-right 2em
  font 12px/1.5em 'Courier New', 'Microsoft Yahei'
code, pre
  padding 10px
  border-radius 4px
  background #f2f2f2
  font 12px/1.5em 'Courier New', 'Microsoft Yahei'
ul
  margin 0
  padding 0
li
  list-style none
blockquote
  margin 0
  padding 10px 0
  text-indent 1em
  margin-left 3em
  background-color #f6f6f6
  border-left 5px solid #CcC
